@using Bonch.WebUI.Models
@model IEnumerable<SummaryViewModel>
@{
    ViewBag.Title = "Index";
}

    <script src="@Url.Content("~/Scripts/Bonch.Models.SummaryViewModel.js")" type="text/javascript"></script>
<div id="content" class="summary">
    <table  class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    Дата создания
                </th>
                <th>
                    Название
                </th>
                <th>
                    Автор
                </th>
                <th>
                    Количество персон
                </th>
                <th>
                    Опубликовано
                </th>
                <td>
                И
                </td>
                <td>
               К
                </td>
                 <td>
               П
                </td>
            </tr>
        </thead>
        <tbody>
        @foreach (SummaryViewModel summary in Model)
        {
            <tr>
                <td>
                @summary.CreateDate
                </td>
                <td>@summary.Title
                </td>
                <td>@summary.AuthorName
                </td>
                <td>@summary.PersonsCount
                </td>
                <td>@summary.Published
                </td>
                <td data-bind="click: selectSummary.bind($data, @summary.Id, '@summary.Published')">
                
                </td>
                <td data-bind="click: copySummary.bind($data, @summary.Id)">
                
                </td>
                <td data-bind="click: publish.bind($data, @summary.Id)">
                
                </td>
            </tr>
        }
        </tbody>
    </table>
       
       
    <form data-bind="submit: showModalForActivities">
        <input type="text" data-bind="value: newSummaryName">
        <button type="submit">Создать</button>
    </form>
</div>

@Html.Partial("ActivitiesPopup")
