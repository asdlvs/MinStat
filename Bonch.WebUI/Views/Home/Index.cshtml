@model Bonch.WebUI.Models.UserViewModel
@{
    ViewBag.Title = "Index";
}
@section sidebar
{
    <div id="sidebar">
        <ul>
            <li>
                <h2>
                    Данные пользователя:</h2>
                @if (ViewBag.IsDataFilled)
                {
                    <table>
                        <tr style="height: 30px;">
                            <td>
                                <strong>Логин: </strong>
                            </td>
                            <td>@Model.Login
                            </td>
                        </tr>
                        <tr style="height: 30px;">
                            <td>
                                <strong>Имя: </strong>
                            </td>
                            <td>@Model.FirstName
                            </td>
                        </tr>
                        <tr style="height: 30px;">
                            <td>
                                <strong>Фамилия: </strong>
                            </td>
                            <td>
                                @Model.LastName
                            </td>
                        </tr>
                        <tr style="height: 30px;">
                            <td>
                                <strong>Номер телефона: </strong>
                            </td>
                            <td>@Model.Phone
                            </td>
                        </tr>
                    </table>
                }
                else
                {
                    using (Html.BeginForm())
                    {
        
                    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
                    <div>
                        Для начала работы с системой, необходимо ввести следующие данные:<br />
                        <br />
                        <table>
                            <tr>
                                <td>@Html.LabelFor(m => m.FirstName)
                                </td>
                                <td>
                                    @Html.ValidationMessageFor(m => m.FirstName)<br />
                                    @Html.TextBoxFor(m => m.FirstName)
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => m.LastName)
                                </td>
                                <td>
                                    @Html.ValidationMessageFor(m => m.LastName)<br />
                                    @Html.TextBoxFor(m => m.LastName)
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => m.Phone)
                                </td>
                                <td>
                                    @Html.ValidationMessageFor(m => m.Phone)<br />
                                    @Html.TextBoxFor(m => m.Phone)
                                </td>
                            </tr>
                        </table>
                        @Html.ValidationSummary(true, "Необходимо указать данные для всех полей!")
                        <input type="submit" value="Сохранить" class="post" />
                    </div>
                    }
                }
            </li>
        </ul>
    </div>
}
<div id="content">
    @Html.Action("HistoryPoints")
</div>
