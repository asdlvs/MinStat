<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
@*    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/datepicker.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.jqplot.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/excanvas.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-modal.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-alert.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tooltip.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-popover.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tab.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-scrollspy.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/Bonch.AnalizeUI.Info.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/Bonch.AnalizeUI.Reports.js")" type="text/javascript" ></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar">
                    </span>
                </button>
                @Html.ActionLink("Кадры", "Index", "Home", null, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="">
                            @Html.ActionLink("Базовый отчет", "Index", "FullReport")
                        </li>
                        <li class="">
                            @Html.ActionLink("Сводный отчет", "Index", "Consolidate")
                        </li>
                        <li class="">
                            @Html.ActionLink("Количественный отчет", "Index", "Summary")
                        </li>
                        <li class="">
                            @Html.ActionLink("Добавить предприятие", "Index", "Administration")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="span12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
