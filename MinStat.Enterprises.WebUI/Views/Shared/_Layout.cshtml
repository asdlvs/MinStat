<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
@*    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />*@
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.jqplot.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/excanvas.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-modal.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-alert.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tooltip.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-popover.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tab.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-dropdown.js")" type="text/javascript" ></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar">
                    </span>
                </button>
                @Html.ActionLink("Система отчетности", "Index", "Summaries", null, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        @*<li class=""> @Html.ActionLink("Отчеты", "Index", "Summaries")</li>*@
                    </ul>
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <p class="navbar-text pull-right">
                            @Html.Raw(String.Format("Здравствуйте,{0} &nbsp; &nbsp;| &nbsp; &nbsp;", HttpContext.Current.User.Identity.Name))
                            @Html.ActionLink("Выйти", "LogOff", "Account")
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="span12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
